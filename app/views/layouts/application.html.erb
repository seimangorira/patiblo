<!DOCTYPE html>
<html>
  <head>
    <title>Patiblo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper blue">
        <%= link_to("ぱちブロ", "/blog", method: :get, class: "brand-logo") %>
        <% if user_signed_in? %>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><%= link_to("新規投稿", "/blog/new", method: :get, class: "waves-effect waves-light btn") %></li>
              <li>
                <ul id="dropdown2" class="dropdown-content">
                  <li><a href="/users/<%= current_user.id %>">マイページ</a></li>
                  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                </ul>
                <a class="btn dropdown-button" data-activates="dropdown2"><%= current_user.nickname %><i class="material-icons right">arrow_drop_down</i></a>
              </li>
            </ul>
        <% else %>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><%= link_to "新規登録", new_user_registration_path, class: "post waves-effect waves-light btn" %></li>
            <li><%= link_to "ログイン", new_user_session_path, class: 'post waves-effect waves-light btn' %></li>
          </ul>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
